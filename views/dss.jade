doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title DSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')
  body
    .d-block.mb-5
      h1.text-center.m-5 Hệ thống hỗ trợ sinh viên chọn phòng trọ (PROMETHEE)
      .d-flex.justify-content-center
        .col-10
          form.border.p-3.rounded.mb-5#myForm
            h3  Nhu cầu sinh viên
            .row
              .col
                .row
                  .fs-5.mb-3  Tài chính (đồng) 
                  .col.input-group.mb-3
                    span.input-group-text  Từ
                    input#price_start.form-control.reset(type='number')
                    span.input-group-text  Đến
                    input#price_end.form-control.reset(type='number')
                    span.input-group-text  trọng số
                    input#w1.form-control.reset(type='number', style='max-width: 15%;')
                .row
                  .fs-5  Diện tích (m2) 
                  .col.input-group.mb-3
                    input#area.form-control.reset(type='number')
                    span.input-group-text  trọng số
                    input#w2.form-control.reset(type='number', style='max-width: 15%;')
                .col
                  .fs-5  Số người ở 
                  .col.input-group.mb-3
                    input#maxPeople.form-control.reset(type='number')
                    span.input-group-text  trọng số 
                    input#w3.form-control.reset(type='number', style='max-width: 15%;')
                .col
                  .fs-5  Gần vị trí
                  .col.input-group.mb-3
                    input#adress.form-control.reset(type='text')
                    span.input-group-text  trọng số
                    input#w4.form-control.reset(type='number', style='max-width: 15%;')
              .col.ms-3
                .fs-5.col.mb-3  Tiện ích 
                
                .input-group.mb-3
                  .input-group-text
                    input#checkbox1.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%; max-width: 100%;')  Vệ sinh khép kín 
                .input-group.mb-3
                  .input-group-text
                    input#checkbox2.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Nội thất đầy đủ
                .input-group.mb-3
                  .input-group-text
                    input#checkbox3.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Bình nóng lạnh
                .input-group.mb-3
                  .input-group-text
                    input#checkbox4.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Điều hòa
                .input-group.mb-3
                  .input-group-text
                    input#checkbox5.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Wifi
                .input-group.mb-3
                  .input-group-text
                    input#checkbox6.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Chỗ nấu ăn
                .input-group.mb-3
                  .input-group-text
                    input#checkbox7.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Chỗ để xe
                .input-group.mb-3
                  .input-group-text
                    input#checkbox8.form-check-input.mt-0.resetCheck(type='checkbox', value='')
                  span.input-group-text(style='min-width: 85%;')  Không chung chủ
                .input-group.mb-3(style="left: 60%")
                  span.input-group-text  trọng số 
                  input#w5.form-control(type='number', style='max-width: 15%;')
                
            .d-flex.justify-content-center.mt-4
              .d-inline
                button#reset.btn.btn-primary.m-2(type='button', style='width: 100px;')  Đặt lại 
                button#submit.btn.btn-primary.m-2(type='button', style='width: 100px;')  Xác nhận 
          .border.p-3.rounded#solution(style="display: none")
            h3 PROMETHEE
            h4.mt-4  Bảng ma trận thuộc tính 
            table.table.table-bordered
              tr
                td Phòng 
                td Giá thuê (đồng)
                td Diện tích (m2)
                td Lượng người
                td Khoảng cách (km)
                td Tiện ích Đáp ứng
                td Giá điện
                td Giá nước
              tbody.resetResult#bodyAttributeMatrix
            h4.mt-4  Bảng ma trận ưa thích hơn
            
            ul.nav.nav-tabs
              li.nav-item
                button.nav-link.active(data-bs-toggle='tab', data-bs-target='#tab1', type='button') Giá thuê;
              li.nav-item
                button.nav-link(data-bs-toggle='tab', data-bs-target='#tab2', type='button')  Diện tích
              li.nav-item
                button.nav-link(data-bs-toggle='tab', data-bs-target='#tab3', type='button')  Lượng người 
              li.nav-item
                button.nav-link(data-bs-toggle='tab', data-bs-target='#tab4', type='button') Tiện ích 
              li.nav-item
                button.nav-link(data-bs-toggle='tab', data-bs-target='#tab5', type='button') Khoảng cách
              li.nav-item
                button.nav-link(data-bs-toggle='tab', data-bs-target='#tab6', type='button') Giá điện
              li.nav-item
                button.nav-link(data-bs-toggle='tab', data-bs-target='#tab7', type='button') Giá nước
            .tab-content.mt-2
              #tab1.tab-pane.fade.show.active
                table.table.table-bordered
                  tbody#table1.resetResult
              #tab2.tab-pane.fade
                table.table.table-bordered
                  tbody#table2.resetResult
              #tab3.tab-pane.fade
                table.table.table-bordered
                  tbody#table3.resetResult
              #tab4.tab-pane.fade
                table.table.table-bordered
                  tbody#table4.resetResult
              #tab5.tab-pane.fade
                table.table.table-bordered
                  tbody#table5.resetResult
              #tab6.tab-pane.fade
                table.table.table-bordered
                  tbody#table6.resetResult
              #tab7.tab-pane.fade
                table.table.table-bordered
                  tbody#table7.resetResult

            h4.mt-4  Các dòng hơn cấp
            canvas#myChart.border.rounded
            //- table.table.table-bordered
            //-   tbody#table9.resetResult

            h4.mt-4  Kết quả
            .col#room.resetResult

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.6.0.min.js')
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src='dss.js')